{
  "name": "zcatalyst",
  "version": "1.1.0",
  "scripts": {
    "clean": "turbo run clean --force --parallel",
    "build": "turbo run build",
    "dev": "turbo dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "docs": "turbo run docs",
    "lint-fix": "turbo run lint -- --fix",
    "format": "turbo run format --parallel",
    "post:build": "node scripts/import.js",
    "prepare": "husky",
    "add-change": "node ./scripts/changelog/add-change.js",
    "publish-packages": "turbo run build && pnpm run publish-all",
    "publish-all": "for p in packages/*; do (cd $p && pnpm publish --access private); done",
    "unpublish-all": "for p in packages/*; do (cd $p && pnpm unpublish --force); done"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "concurrently": "^9.0.1",
    "conventional-changelog": "^7.0.2",
    "conventional-commits-parser": "^3.2.3",
    "downlevel-dts": "^0.11.0",
    "esbuild": "0.19.11",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "turbo": "^2.1.3",
    "typedoc": "^0.26.2",
    "typescript": "^5.4.5",
     "moment": "^2.30.1"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=21"
  }
}
